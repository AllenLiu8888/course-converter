{
  "name": "my-course-converter",
  "version": "1.0.0",
  "description": "Convert Open edX OLX courses to LiaScript Markdown",
  "type": "module",
  "bin": {
    "my-course-converter": "./bin/my-course-converter.js"
  },
  "scripts": {
    "cli": "node courseconverter.js --help",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "c8 --reporter=text --reporter=lcov --reporter=html npm test",
    "test:coverage-jest": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:verbose": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --verbose"
  },
  "keywords": [
    "olx",
    "liascript",
    "course-converter",
    "openedx"
  ],
  "author": "Yikai Liu",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "commander": "^14.0.0",
    "extract-zip": "^2.0.1",
    "fast-xml-parser": "^5.2.5",
    "node-html-markdown": "^1.3.0",
    "tar": "^7.4.3",
    "turndown": "^7.2.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "c8": "^10.1.3",
    "jest": "^30.1.1"
  }
}
